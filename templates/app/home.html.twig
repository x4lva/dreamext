{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="card p-3 mb-3">
        <div class="card-body">
            <div class="d-flex gap-3 align-items-center">
                {{ form(form) }}
                {{ knp_pagination_sortable(pagination, 'Date', 'p.date') }}
                {{ knp_pagination_sortable(pagination, 'Author Email', 'u.email') }}
            </div>
        </div>
    </div>

    <div class="d-flex flex-column gap-3 mb-4">
        {% for post in pagination %}
            {{ include('app/components/post/item.html.twig') }}
        {% endfor %}
    </div>

    <div class="navigation">
    </div>

{% endblock %}