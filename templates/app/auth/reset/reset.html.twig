{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-4">
                    <h1>{{ 'forms.user.resetPassword'|trans }}</h1>
                    <p class="text-muted">Enter new account password</p>

                    {{ form_start(form) }}

                    <div class="input-group mb-4">
                        {{ form_widget(form.password, {'attr': {'placeholder': 'Password'}}) }}
                        {{ form_errors(form.password) }}
                    </div>

                    <button type="submit" class="btn btn-block btn-primary">{{ 'forms.user.setPassword'|trans }}</button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

