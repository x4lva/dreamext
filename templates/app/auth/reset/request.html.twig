{% extends 'base.html.twig' %}

{% block title %}Password Reset{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-4">
                    <h1>{{ 'forms.user.resetPassword'|trans }}</h1>
                    <p class="text-muted">{{ 'messages.Enter your account email'|trans }}</p>

                    {{ form_start(form) }}

                    <div class="input-group mb-4">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <button type="submit" class="btn btn-block btn-primary">{{ 'forms.user.resetPassword'|trans }}</button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}