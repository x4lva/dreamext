<a class="btn btn-primary" {% for attr, value  in options %} {{ attr }}="{{ value }}"{% endfor %}>
    {% if sorted %}
        {% if direction == 'desc' %}
            <i style="color: #d2d6de;" class="fas fa-sort-up"></i>
        {% else %}
            <i style="color: #d2d6de;" class="fas fa-sort-down"></i>
        {% endif %}
    {% else %}
        <i style="color: #d2d6de;" class="fa fa-sort"></i>
    {% endif %}
    {{ title|raw }}
</a>
